<p id="notice"><%= notice %></p>

<h1>Taxpayers</h1>

<table>
  <thead>
    <tr>
      <th>First name</th>
      <th>Middle name</th>
      <th>Last name</th>
      <th>Suffix</th>
      <th>Mobile</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @taxpayers.each do |taxpayer| %>
      <tr>
        <td><%= taxpayer.first_name %></td>
        <td><%= taxpayer.middle_name %></td>
        <td><%= taxpayer.last_name %></td>
        <td><%= taxpayer.suffix %></td>
        <td><%= taxpayer.mobile %></td>
        <td><%= link_to 'Show', taxpayer %></td>
        <td><%= link_to 'Edit', edit_taxpayer_path(taxpayer) %></td>
        <td><%= link_to 'Destroy', taxpayer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

