<%=simple_form_for [@taxpayer, @machinery], url: :taxpayer_machineries do |f| %>
  <%=f.error_notification %>
  <%=f.input :arp_number %>
  <%=f.input :land_area %>
  <%=f.simple_fields_for :address do |a| %>
    <%=a.input :street %>
  <% end %>
  <%=f.simple_fields_for :machinery_detail do |m| %>
    <%=m.input :description %>
  <% end %>
  <%=f.submit 'Save' %>
<% end %>
