<%= simple_form_for(@taxpayer) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :first_name %>
    <%= f.input :middle_name %>
    <%= f.input :last_name %>
    <%= f.input :suffix %>
    <%= f.input :mobile %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
